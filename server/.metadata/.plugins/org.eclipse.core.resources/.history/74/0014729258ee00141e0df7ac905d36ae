import java.io.File;
import java.io.IOException;
import java.util.Scanner;

import sqlite.SQLiteLoader;



public class ScoutSimulator {
	
	public static final String SAMPLE_BASE_DIR = "./extern/scoutSamples";

	public static void main(String[] args) {
		
		String sampleFilename = "";
		File sampleFile = null;
		Scanner scanner = new Scanner(System.in);
		
		System.out.print("> ");
		
		if(scanner.hasNext()){
			sampleFilename = scanner.nextLine();
			System.out.println(sampleFile);
			sampleFile = new File(SAMPLE_BASE_DIR, sampleFilename);
			try {
				sampleFile.createNewFile();
			} catch (IOException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
		
		
			
		
		/*
		try {
			SQLiteLoader loader = new SQLiteLoader("");
		} catch (ClassNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		*/
		
	}

}
