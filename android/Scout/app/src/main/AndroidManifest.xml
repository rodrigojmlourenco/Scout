<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="pt.ulisboa.tecnico.cycleourcity.evalscout" >

    <uses-permission android:name="android.permission.BATTERY_STATS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Location Probe -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Wifi probe -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Scout Remote Communication -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>

    <!-- Vibration - for user feedback -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- Gravity Sensor Probe -->
    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.sensor.gyroscope"
        android:required="true" />

    <application
        android:name="pt.ulisboa.tecnico.cycleourcity.evalscout.ScoutApplication"
        android:allowBackup="true"
        android:icon="@mipmap/trends"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="pt.ulisboa.tecnico.cycleourcity.evalscout.MainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="pt.ulisboa.tecnico.cycleourcity.evalscout.offloading.profiling.device.MobileDataPlanProfiler">
            <intent-filter>
                <action android:name="android.intent.action.ACTION_SHUTDOWN" />
            </intent-filter>
        </receiver>

        <receiver
            android:name="edu.mit.media.funf.Launcher"
            android:enabled="true" >
            <intent-filter>
                <action android:name="android.intent.action.BATTERY_CHANGED" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.DOCK_EVENT" />
                <action android:name="android.intent.action.ACTION_SCREEN_ON" />
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>

        <activity
            android:name="pt.ulisboa.tecnico.cycleourcity.evalscout.CalibrateActivity"
            android:label="@string/title_activity_calibrate" >
        </activity>
        <activity
            android:name="pt.ulisboa.tecnico.cycleourcity.evalscout.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>

        <provider
            android:name="pt.ulisboa.tecnico.cycleourcity.evalscout.storage.provider.ScoutProvider"
            android:authorities="pt.ulisboa.tecnico.cycleourcity.evalscout.storage.provider"
            android:exported="false"
            android:syncable="true"/>

        <!-- Sensing Service -->
        <service android:name="edu.mit.media.funf.FunfManager" >
            <meta-data
                android:name="evaluation"
                android:value="@string/scout_pipeline" />
        </service>

        <!-- http://developer.android.com/training/sync-adapters/creating-authenticator.html#DeclareAuthenticator-->
        <service
            android:name="pt.ulisboa.tecnico.cycleourcity.evalscout.network.authentication.ScoutAuthenticatorService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator"/>
            </intent-filter>
            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

        <!-- Network Communication Service (SyncAdapters)-->
        <service
            android:name="pt.ulisboa.tecnico.cycleourcity.evalscout.network.ScoutSyncService"
            android:exported="true"
            android:process=":sync">
            <intent-filter>
                <action android:name="android.content.SyncAdapter"/>
            </intent-filter>
            <meta-data android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter" />
        </service>



    </application>

</manifest>
