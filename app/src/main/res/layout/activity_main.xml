<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <Button
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/startSession"
            android:id="@+id/startSession" />

        <Button
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"

            android:text="@string/stopSession"
            android:id="@+id/stopSession" />
    </LinearLayout>

    <EditText
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:text="Tag"
        android:id="@+id/tag"
        android:layout_alignBottom="@+id/archive"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/archive"
        android:layout_toStartOf="@+id/archive"
        android:autoText="false"
        android:editable="true"
        android:linksClickable="false"
        android:longClickable="false"
        android:lines="1"
        android:nestedScrollingEnabled="false" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/archive"
        android:id="@+id/archive"
        android:layout_below="@+id/linearLayout"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/tag"
        android:layout_marginTop="52dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/scoutStateLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/locationTag"
                android:id="@+id/locationTag"
                android:layout_marginTop="15dip"
                android:layout_marginBottom="15dip" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/locationValue"
                android:layout_marginTop="15dip"
                android:layout_marginBottom="15dip"
                android:phoneNumber="false"
                android:layout_marginLeft="15dip" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/speedTag"
                android:id="@+id/speedTag"
                android:layout_marginTop="15dip"
                android:layout_marginBottom="15dip" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/speedValue"
                android:layout_marginTop="15dip"
                android:layout_marginBottom="15dip"
                android:phoneNumber="false"
                android:layout_marginLeft="15dip" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/altitudeTag"
                android:id="@+id/altitudeTag"
                android:layout_marginTop="15dip"
                android:layout_marginBottom="15dip" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/altitudeValue"
                android:layout_marginTop="15dip"
                android:layout_marginBottom="15dip"
                android:phoneNumber="false"
                android:layout_marginLeft="15dip" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/slopeTag"
                android:id="@+id/slopeTag"
                android:layout_marginTop="15dip"
                android:layout_marginBottom="15dip" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/notImplemented"
                android:id="@+id/slopeValue"
                android:layout_marginTop="15dip"
                android:layout_marginBottom="15dip"
                android:phoneNumber="false"
                android:layout_marginLeft="15dip" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/travelStateTag"
                android:id="@+id/travelStateTag"
                android:layout_marginTop="15dip"
                android:layout_marginBottom="15dip" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/travelStateValue"
                android:layout_marginTop="15dip"
                android:layout_marginBottom="15dip"
                android:phoneNumber="false"
                android:layout_marginLeft="15dip" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>